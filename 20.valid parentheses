class Solution {
public:
    bool isValid(string s) {
        string::size_type lenghth = s.size();
        string string1(" ");
        string::size_type i = 0, j = 0;
        for (i = 0; i < lenghth; ++i)
        {
            if (s[i] == '(' || s[i] == '[' || s[i] == '{')
            {
                ++j;
                string1 = string1 + s[i];
            }
            else if (s[i] == ')' && string1[j] == '(')
            { 
                string1.pop_back();
                j--; }
            else if (s[i] == '}' && string1[j] == '{') {
                string1.pop_back();
                j--;
            }
            else if (s[i] == ']' && string1[j] == '[') {
                string1.pop_back();
                j--;
            }
            else return false;
            //cout << j << endl;
        }
        if (j != 0) return false;
        return true;
    }
};
