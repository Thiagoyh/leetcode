class Solution {
public:
    ListNode* swapPairs(ListNode* head) {
        if (!head) return NULL;
        ListNode* p = head;
        int temp = 0;
        while (p && p ->next)
        {
            temp = p->val;
            p->val = (p->next)->val;
            (p->next)->val = temp;
            p = p->next->next;
        }
        return head;
    }
};
