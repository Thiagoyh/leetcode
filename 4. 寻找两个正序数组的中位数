class Solution {
public:
    double findMedianSortedArrays(vector<int>& nums1, vector<int>& nums2) {
        const int n = nums1.size() + nums2.size();
        int k = 0, i = 0, j = 0;
        int count1 = 0, count2 = 0;
        while(i != nums1.size() && j != nums2.size())
        {
           k++;
           if(nums1[i] <= nums2[j]){
               i++;
               if(k - 1 == n / 2)
               {
                   count1 = nums1[i - 1];
                   break;
               }
               if(k - 1 == n / 2 - 1)
                   count2 = nums1[i - 1];
           }
           else{
               j++;
               if(k - 1 == n / 2)
               {
                   count1 = nums2[j - 1];
                   break;
               }
               if(k - 1 == n / 2 - 1)
                   count2 = nums2[j - 1];
           }
        }
        while(i != nums1.size())
        {
            if(k > n / 2) break;
            k++;
            i++;
            if(k - 1 == n / 2)
            {
                count1 = nums1[i - 1];
                 break;
            }
            if(k - 1 == n / 2 - 1)
                count2 = nums1[i - 1];
        }
        while(j != nums2.size())
        {
            if(k > n / 2) break;
            j++;
            k++;
            if(k - 1 == n / 2)
            {
                count1 = nums2[j - 1];
                break;
            }
            if(k - 1 == n / 2 - 1)
                count2 = nums2[j - 1];
        }
         if(n % 2 == 0)
            return (double)(count1 + count2) / 2;
        else
            return double(count1);
    }
};
