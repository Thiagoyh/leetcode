class Solution {
public:
    vector<int> twoSum(vector<int>& nums, int target) {
      vector<int> solution(2, 0);
      map<int, int> a_map;
      for(vector<int>::size_type i = 0; i != nums.size(); ++i)
      {
          if(a_map.count(target - nums[i]) > 0)
          {
               solution[0] = a_map[target - nums[i]];
               solution[1] = i;
               break;
          }
          a_map[nums[i]] = i;
      }
      return solution;
    }
};
